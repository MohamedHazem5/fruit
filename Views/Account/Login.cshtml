<body>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    <form asp-action="Login" method="post">
        <h3>Login Here</h3>

        <label asp-for="email">Email</label>
        <input type="text" placeholder="Email or Phone" asp-for="email" id="username">

        <label asp-for="password">Password</label>
        <input asp-for="password" type="password" placeholder="Password" id="password">

        <button type="submit">Log In</button>
        <a class="btn p-3 mt-1 px-2 btn-lg btn-primary w-100" asp-action="Create">Register </a>

    </form>

