	@model IEnumerable<fruit.Models.Product>

    
    <!-- products -->
	<div class="product-section mt-150 mb-150 mb-150">
		<div class="container">

			

			<div class="row product-lists">

                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 text-center strawberry">
                        <div class="single-product-item">
                            <div class="product-image">
                                <a asp-action="Details" asp-route-id="@item.ProductId"><img src="@item.image" alt=""></a>
                            </div>
                            <h3>@item.Name</h3>
                            <p class="product-price"><span>Per Kg</span> @item.price$ </p>
                            <a  asp-controller="Order" asp-action="Index" asp-route-id="@item.ProductId" class="cart-btn"><i class="fas fa-shopping-cart"></i>Make an Order</a>
                        </div>
				    </div>
                }
			</div>

			
		</div>
	</div>
	<!-- end products -->
